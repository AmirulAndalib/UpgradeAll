<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.xzos.upgradeall"
    tools:ignore="QueryAllPackagesPermission">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28">
    </uses-permission>
    <uses-permission android:name="net.xzos.upgradeAll.permission.ACCESS_RECEIVER_STATE" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="${appName}"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <receiver
            android:name=".server.update.UpdateServiceBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="net.xzos.upgradeAll.permission.ACCESS_RECEIVER_STATE">
            <intent-filter>
                <action android:name="net.xzos.upgradeAll.UPDATE_SERVICE_BROADCAST" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".server.downloader.DownloadBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="net.xzos.upgradeAll.permission.ACCESS_RECEIVER_STATE">
            <intent-filter>
                <action android:name="net.xzos.upgradeAll.DOWNLOAD_BROADCAST" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ui.home.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.hubmanager.HubManagerActivity"
            android:label="@string/app_hub">
        </activity>
        <activity
            android:name="net.xzos.upgradeall.ui.applist.magisk.MagiskModuleActivity"
            android:label="@string/home_module_magisk_module">
        </activity>
        <activity
            android:name="net.xzos.upgradeall.ui.applist.apps.AppsActivity"
            android:label="@string/home_module_apps">
        </activity>
        <activity
            android:name="net.xzos.upgradeall.ui.filemanagement.FileManagementActivity"
            android:label="@string/home_module_file_management">
        </activity>
        <activity
            android:name="net.xzos.upgradeall.ui.discover.DiscoverActivity"
            android:label="@string/home_module_discovery">
        </activity>
        <activity
            android:name="net.xzos.upgradeall.ui.detail.AppDetailActivity" />
        <activity
            android:name="net.xzos.upgradeall.ui.detail.setting.AppSettingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.log.LogActivity"
            android:label="@string/home_log" />
        <activity
            android:name=".ui.preference.SettingsActivity"
            android:label="@string/home_settings" />
        <activity android:name="net.xzos.upgradeall.ui.utils.file_pref.UCropActivity" />
        <activity android:name="net.xzos.upgradeall.ui.utils.file_pref.SelectFileActivity" />
        <activity android:name="net.xzos.upgradeall.ui.utils.file_pref.SelectDirActivity" />
        <activity android:name="net.xzos.upgradeall.ui.utils.file_pref.SaveFileActivity" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="${enableCrashReporting}" />
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />
    </application>

</manifest>
